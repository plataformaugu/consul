<div class="single-page-component">
  <div class="page-header">
    <div class="row">
      <% if @subtitle.present? and @image.present? %>
        <div class="small-12 medium-8 column">
          <h1><%= @title %></h1>
          <h4><%= @subtitle %></h4>
        </div>
        <div class="small-12 medium-4 column">
          <%= image_tag @image %>
        </div>
      <% else %>
        <div class="small-12 column">
          <h2 class="text-center"><%= @title %></h2>
        </div>
      <% end %>
    </div>
  </div>

  <div class="empty-container">
    <h2 class="text-center">No hay <%= @readable_model_name %> cread<%= @vowel %>s</h2>
      <% if @new_record_path.present? %>
        <div class="new-record-container">
          <h4>Sube tu <%= @readable_model_name[0.. -2] %></h4>
          <%= link_to @new_record_path do %>
            <div class="plus-button"></div>
          <% end %>
        </div>
      <% end %>
  </div>
</div>
