<%= render Budgets::SubheaderComponent.new(budget) %>

<div id="budget_info" class="budget-info">
  <div class="row margin-top">
    <div class="small-12 column">
      <% if budget.pdf_link.present? %>
        <%= link_to budget.pdf_link, target: '_blank', style: 'color: #727176; text-decoration: none;' do %>
          <%= image_tag '/images/pdf-icon.svg', style: 'width: 2em' %> <small><strong><u>Ver bases</u></strong></small>
        <% end %>
      <% end %>
      <div class="mt-1"></div>
    </div>
  </div>
</div>
<%= render Budgets::PhasesComponent.new(budget) %>

<% if current_user and budget.balloting? %>
  <%= render Budgets::MoneybagComponent.new(budget) %>
<% end %>

<%= render Budgets::InvestmentsListComponent.new(budget) %>

<% if budget.publishing_prices? or budget.selecting? %>
  <div class="mt-3">
    <%= link_to 'Ver no seleccionados', "/budgets/#{budget.id}/unselected", class: 'presupuestos-solid-button-sm', style: 'text-decoration: none; color: white;' %>
  </div>
<% end %>
