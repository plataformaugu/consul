<main class="results-page">
  <div class="single-page-component">
    <div class="page-header">
      <div class="row">
        <div class="small-12 medium-8 column">
          <h1>Resultados de Consultas</h1>
          <h4></h4>
        </div>
        <div class="small-12 medium-4 column">
          <%= image_tag '/images/process/polls-circle.svg' %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="small-12 column">
        <% if @polls.any? %>
          <div class="cards-container-component">
            <% @polls.each do |poll| %>
              <%= render Shared::CardComponent.new(
                results_poll_path(id: poll.id),
                poll.title,
                poll.image.present? ? poll.image.variant(:medium) : '/images/process/polls-circle.svg',
                poll.description,
                nil
              ) %>
            <% end %>
          </div>
          <%= paginate @polls %>
        <% else %>
          <h2 class="text-center">No hay resultados</h2>
        <% end %>
      </div>
    </div>
  </div>
</main>
