<div class="header-card jumbo highlight custom-jumbo-home">
    <div class="row">
      <div class="small-12 medium-4 column jumbo-right-pane">
        <span><%= header.label %></span>
        <h1><%= header.title %></h1>
        <p><%= header.description %></p>
        <h3><%= header.link_text %></h3>
      </div>

      <% if header.image.present? %>
        <div class="small-12 medium-8 column">
          <%= image_tag('banner-lc.svg',
                        alt: header.image.title,
                        style: 'width: 100vw') %>
        </div>
      <% end %>
    </div>
</div>