<div class="header-card jumbo highlight custom-jumbo-home">
  <div class="banner-sky">
    <%= image_tag "/images/banner-cloud.svg", class: 'banner-cloud-1' %>
    <%= image_tag "/images/banner-cloud.svg", class: 'banner-cloud-2' %>
    <%= image_tag "/images/banner-cloud.svg", class: 'banner-cloud-3' %>

    <div class="banner-airplane">
      <%= image_tag "/images/b-avion.svg", class: 'banner-airplane-img' %>
      <%= image_tag "/images/b-lienzo.svg", class: 'banner-airplane-flag' %>
      <%= image_tag "/images/b-tlienzo.svg", class: 'banner-airplane-text' %>
    </div>

    <div class="banner-sky-title">
      <%= image_tag "/images/b-icono.svg" %>
      <h1>Participa<br>Las Condes</h1>
    </div>
    <div class="banner-sky-subtitle">
      <h4>Tu decisión construye una mejor comuna</h4>
    </div>

    <div class="banner-sky-buttons">
      <div class="banner-sky-button banner-sky-button-1">
        <p>Únete</p>
        <div class="plus-button"></div>
      </div>
      <div class="banner-sky-button banner-sky-button-2">
        <p>Participa</p>
        <div class="plus-button"></div>
      </div>
      <div class="banner-sky-button banner-sky-button-3">
        <p>Decide</p>
        <div class="plus-button"></div>
      </div>
    </div>

    <div class="banner-slider-container">
      <div class="orbit" role="region" aria-label="Favorite Space Pictures" data-orbit data-use-m-u-i="false" data-auto-play="false">
        <ul class="orbit-container">
        <button class="orbit-previous" aria-label="previous"><span class="show-for-sr">Previous Slide</span>&#9664;</button>
        <button class="orbit-next" aria-label="next"><span class="show-for-sr">Next Slide</span>&#9654;</button>
        <div class="is-active orbit-slide">
          <%= image_tag "/images/slider-1.svg" %>
        </div>
        <div class="orbit-slide">
          <%= image_tag "/images/slider-2.svg" %>
        </div>
        <div class="orbit-slide">
          <%= image_tag "/images/slider-3.png" %>
        </div>
      </div>

      <div class="b-s-c-text">
        <p>
          ¡Conoce todas las<br> formas de participar!
        </p>
      </div>
    </div>

    <div class="banner-sky-buildings-back">
      <%= image_tag "/images/e-skyline.svg" %>
    </div>
  
    <div class="banner-sky-buildings">
      <div class="banner-slider-box">
        <div>
          <p>Descubre los Ejes Temáticos<br>en que puedes votar</p>
        </div>
      </div>
      <%= image_tag "/images/e-skyline-f.svg" %>
    </div>
  </div>

