<% if header.present? %>
  <div class="jumbo highlight custom-jumbo-banner">
    <div class="row">
      <div class="small-12 medium-7 column">
        <span><%= header.label %></span>
        <h1><%= header.title %></h1>
        <p style="font-size: 1.2em;"><%= header.description %></p>
      </div>
      <div class="small-12 medium-4 column custom-jumbo-button">
        <%= link_to header.link_text, header.link_url, class: "button", method: :get %>
      </div>
    </div>
  </div>
<% end %>
