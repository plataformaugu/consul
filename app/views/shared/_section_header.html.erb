<div class="custom-help-header <%= defined?(small_height) and small_height == true ? 'c-h-h-small' : '' %>" style="background-color: <%= defined?(color) ? color : 'red' %>">
  <%= image_tag "/images/banner-cloud.svg", class: 'banner-cloud-1' %>
  <%= image_tag "/images/banner-cloud.svg", class: 'banner-cloud-2' %>
  <%= image_tag "/images/banner-cloud.svg", class: 'banner-cloud-3' %>
  <% if defined?(description) and (defined?(title) or defined?(title2)) %>
    <div class="left-side-help-header">
      <h1>
        <% if defined?(title) %>
        <%= title %>
        <% end %>
        <% if defined?(title2) %>
        <br>
        <%= title2 %>
        <% end %>
      </h1>
    </div>
    <div class="right-side-help-header">
      <p><%= description %></p>
    </div>
  <% elsif defined?(description) and not defined?(title) and not defined?(title2) %>
    <div class="full-help-header">
      <p><%= description %></p>
    </div>
  <% else %>
    <div class="full-help-header" style="<%= defined?(pre_title) and !pre_title.nil? ? 'flex-direction: column; align-items: center; justify-content: start;' : '' %>">
      <% if defined?(pre_min_title) and !pre_min_title.nil? %>
        <h4><%= pre_min_title %></h4>
      <% end %>

      <% if defined?(pre_title) and !pre_title.nil? %>
        <h4><%= pre_title %></h4>
      <% end %>

      <% if defined?(title) %>
        <h1><%= title %>
        <% if defined?(title2) %>
        <br>
        <%= title2 %>
        <% end %></h1>
      <% end %>
    </div>
  <% end %>
  <% if defined?(section_image) and !section_image.nil? %>
    <%= image_tag section_image, class: 'header-image desktop-only', style: defined?(image_style) ? image_style : '' %>
  <% end %>
  <% if defined?(show_buildings) %>
    <%= image_tag "/images/e-skyline-v.svg", class: 'back-buildings' %>
  <% end %>
  <% if defined?(extra_image) and defined?(extra_image_style) %>
      <%= image_tag extra_image, style: extra_image_style, class: 'desktop-only' %>
  <% end %>
