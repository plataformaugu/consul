<h2>Rellena con tu información</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "shared/errors", resource: resource %>
  <div class="row">

    <div class="small-12 column">
      <%= f.select :comuna,
        options_for_select(@comunas, :selected => current_user.comuna || nil),
        label: '¿En qué comuna vives?' %>
    </div>

    <div class="small-12 column">
      <%= f.select :gender,
        options_for_select(@gender, :selected => current_user.gender || nil),
        label: '¿Con cuál género te identificas?' %>
    </div>

    <div class="small-12 column">
      <%= f.text_field :nationality, maxlength: 20,
        placeholder: 'Nacionalidad',
        label: '¿Cuál es tu nacionalidad?' %>
    </div>

    <div class="small-12 column">
      <%= f.number_field :custom_age, placeholder: 'Edad', label: '¿Cuántos años tienes?', min: 0, max: 100, value: current_user.custom_age %>
    </div>

    <div class="small-12 column">
      <label for="user_disability">¿Tiene algún tipo de discapacidad?</label>
      <%= f.check_box :disability, label: 'Si' %>
    </div>

    <div class="small-12 column">
      <%= f.select :indigenous,
        options_for_select(@indigenous_options, :selected => current_user.indigenous || nil),
        label: '¿Pertenece a algún pueblo indígena o tribal?',
        required: true %>
    </div>

    <div class="small-12 column">
      <%= f.select :sexual_orientation,
        options_for_select(@sexual_orientation, :selected => current_user.sexual_orientation || nil),
        label: '¿Cuál es tu orientación sexual?' %>
    </div>

    <div class="small-12 column">
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div><%= t("devise_views.users.registrations.edit.waiting_for") %> <%= resource.unconfirmed_email %></div>
      <% end %>
    </div>

    <div class="small-12 column">
      <%= f.submit "Enviar", class: "button" %>
    </div>
  </div>
<% end %>
