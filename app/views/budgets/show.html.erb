<%= render "shared/section_header",
  color: "#9346b8",
  section_image: "/images/h-presupuestos1.svg",
  title: 'Presupuestos Participativos',
  description: 'Lorem ipsum',
  show_buildings: true
%>

<main class="budgets-index">
  <div class="row">
    <% if !@budget.custom_description.nil? %>
    <p>
      <%= @budget.custom_description %>
    </p>
    <% end %>
    <%= render Shared::BannerComponent.new("budgets") %>
    <% provide :title do %><%= @budget.name %><% end %>

    <% content_for :canonical do %>
      <%= render "shared/canonical", href: budget_url(@budget, filter: @current_filter) %>
    <% end %>

    <%= render Budgets::BudgetComponent.new(@budget) %>
  </div>

  <div class="general-footer-container">
    <%= render 'shared/waves_footer', color1: '#cfa7f0', color2: '#8148b3' do %>
    <% end %>
  </div>
</main>
