<div class="orbit" style="position: relative; z-index: 8000;" role="region" aria-label="Favorite Space Pictures" data-orbit data-use-m-u-i="false" data-auto-play="false">
  <ul class="orbit-container">
  <button class="orbit-previous" aria-label="previous"><span class="show-for-sr">Previous Slide</span>&#9664;</button>
  <button class="orbit-next" aria-label="next"><span class="show-for-sr">Next Slide</span>&#9654;</button>
  <% Proposal.where(is_initiative: false).or(Proposal.where(is_initiative: nil)).published.order(id: :desc).in_groups_of(2)[..2].each do |p_group| %>
    <div class="is-active orbit-slide custom-orbit-slide">
    <% p_group.each do |p| %>
      <% if p %>
        <div class="home-proposals-card">
          <div class="home-proposals-cards-header">
            <% if p.main_theme.present? %>
              <%= link_to p.main_theme, style: 'text-decoration: none;', target: '_blank' do %>
                <div class="h-p-c-h-theme-container">
                  <div><%= image_tag p.main_theme.icon %></div>
                  <h3><%= p.main_theme.name %></h3>
                </div>
              <% end %>
            <% else %>
              <h3>
                Categor√≠a
              </h3>
            <% end %>
          </div>
          
          <% if p.image.present? %>
            <div class="home-proposals-cards-image">
              <%= image_tag p.image_url(:medium) %>
            </div>
          <% elsif p.main_theme.present? %>
            <div class="home-proposals-cards-image">
              <%= image_tag p.main_theme.icon %>
            </div>
          <% else %>
            <div class="home-proposals-cards-image">
              <%= image_tag 'https://picsum.photos/500' %>
            </div>
          <% end %>
          <div class="home-proposals-cards-content" style="<%= p.image.present? ? 'height: 50%;' : 'height: 100%;' %>">
            <div>
              <h3><%= p.title.truncate_words(6, omission: '...') %></h3>
            </div>
            <div class="home-proposals-cards-content-footer">
              <%= link_to 'Participar', proposal_path(p.id), class: 'button expanded large', target: '_blank' %>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
    </div>
  <% end %>
</div>