<%= render "shared/globalize_locales", resource: @poll %>

<%= translatable_form_for [:admin, @poll] do |f| %>
  <%= render "shared/errors", resource: @poll %>

  <div class="row">
    <div class="clear">
      <div class="small-12 medium-6 column">
        <%= f.date_field :starts_at %>
      </div>

      <div class="small-12 medium-6 column">
        <%= f.date_field :ends_at %>
      </div>
    </div>
  </div>

  <div class="row">
    <%= f.translatable_fields do |translations_form| %>
      <div class="small-12 medium-6 column">
        <%= translations_form.text_field :name %>
      </div>

      <div class="small-12 column">
        <%= translations_form.text_area :summary, rows: 4 %>
      </div>

      <div class="small-12 column">
        <%= translations_form.text_area :description, rows: 8, class: 'html-area' %>
      </div>
    <% end %>
  </div>

  <div class="row">
    <div class="images small-12 column">
      <%= render "images/nested_image", f: f %>
    </div>

    <div class="clear">
    </div>
  </div>

  <div class="row">
    <div class="small-12 column">
      <div class="mt-2">
        <%=
          f.collection_select :main_theme_id,
          MainTheme.all,
          :id,
          :name,
          {prompt: 'Elige un eje temático', label: 'Eje Temático'},
          {class: 'custom-input', style: 'width: 100%;', required: true}
        %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="small-12 column">
      <div class="mt-2">
        <%= f.text_field :pdf_link, class: 'custom-input', label: 'Link PDF' %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="small-12 column">
      <div class="mt-2">
        <%= render Segmentation::FormComponent.new(
          Segmentation.find_by(entity_name: @poll.class.name, entity_id: @poll.id)
        ) %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="clear">
      <div class="small-12 medium-4 large-2 column">
        <%= f.submit t("admin.polls.#{admin_submit_action(@poll)}.submit_button"),
                     class: "button success expanded margin-top" %>
      </div>
    </div>
  </div>

<% end %>

<script src="https://cdn.rawgit.com/aparshin/leaflet-boundary-canvas/f00b4d35/src/BoundaryCanvas.js"></script>
