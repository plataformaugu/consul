<a href="<%= edit_admin_poll_path(@poll) %>" title="<%= t("proposals.index.start_proposal") %>" data-turbolinks="false" class="button float-right">
  <%= t("admin.polls.edit.title") %>
</a>


<h2 class="inline-block">
  <%= @poll.name %>
</h2>

<div class="clear"></div>

<div class="callout">
  <div class="inline-block">
    <strong><%= t("admin.polls.index.dates") %></strong>
    <br>
    <%= l @poll.starts_at.to_date %> - <%= l @poll.ends_at.to_date %>
  </div>

  <% if @poll.geozone_restricted %>
    <div class="inline-block margin-left">
      <strong><%= t("admin.polls.index.geozone_restricted") %></strong>
      <br>
        <%= @poll.geozones.pluck(:name).to_sentence %>
      </div>
  <% end %>
</div>
