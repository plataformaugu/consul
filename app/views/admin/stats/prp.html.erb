<%= render 'header' %>

<div class="row stats-numbers">
  <div class="small-12 medium-4 column">
    <p class="featured">
      Procesos totales <br>
      <span class="number"><%= number_with_delimiter(@records.count) %></span>
    </p>
  </div>
  <div class="small-12 medium-4 column">
    <p class="featured">
      Votos totales <br>
      <span class="number"><%= number_with_delimiter(@votes) %></span>
    </p>
  </div>
  <div class="small-12 medium-4 column">
    <p class="featured">
      Comentarios totales <br>
      <span class="number"><%= number_with_delimiter(@comments) %></span>
    </p>
  </div>
</div>

<div class="row">
  <div class="small-12 column">
    <% if @records.any? %>
      <table>
        <thead>
          <tr>
            <th scope="col" class="small-1">ID</th>
            <th scope="col">Nombre</th>
            <th scope="col" class="small-2"></th>
          </tr>
        </thead>
        <tbody>
          <% @records.each do |record| %>
            <tr>
              <td><%= record.id %></td>
              <td><%= link_to record.title, debate_path(record.id), target: "_blank" %></td>
              <td><%= link_to 'Ver', prp_admin_stats_path + "/#{record.id}", data: { turbolinks: false } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <%= paginate @records %>
    <% else %>
      <div class="callout primary">
        No hay registros.
      </div>
    <% end %>
  </div>
</div>
