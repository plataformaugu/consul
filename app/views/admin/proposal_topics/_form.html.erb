<div class="margin-top">
  <%= form_with(model: [:admin, @proposal_topic], local: true) do |form| %>

    <div class="field">
      <%= form.text_field :title, label: 'Título', required: true %>
    </div>

    <div class="field">
      <%= form.text_area :description, label: 'Descripción', class: 'html-area' %>
    </div>

    <div class="field">
      <%= form.date_field :start_date, label: 'Fecha de inicio', required: true %>
    </div>

    <div class="field">
      <%= form.date_field :end_date, label: 'Fecha de termino', required: true %>
    </div>

    <div class="field">
      <%= render Custom::CommunesSelectComponent.new(@proposal_topic, form, false) %>
    </div>

    <div class="field" style="margin-top: 1rem; margin-bottom: 1rem;">
      <%= form.check_box :cu_verified_only, label: 'Sólo usuarios verificados por Clave Única' %>
    </div>

    <%= render Shared::ImageFieldComponent.new(@proposal_topic, form, true) %>

    <div class="actions">
      <% if action_name == 'edit' %>
        <%= form.submit 'Editar convocatoria', class: 'button' %>
      <% else %>
        <%= form.submit 'Crear convocatoria', class: 'button' %>
      <% end %>
    </div>
  <% end %>
</div>
