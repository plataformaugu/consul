<div class="margin-top">
  <%= form_with(model: [:admin, @event], local: true) do |form| %>
    <% if @event.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

        <ul>
          <% @event.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= form.text_field :title, label: 'Título', required: true %>
    </div>

    <div class="field">
      <%= form.text_area :description, label: 'Descripción', class: 'html-area' %>
    </div>

    <div class="field">
      <%= form.datetime_field :start_time, label: 'Fecha de inicio', required: true %>
    </div>

    <div class="field">
      <%= form.datetime_field :end_time, label: 'Fecha de termino', required: true %>
    </div>

    <%= render Shared::ImageFieldComponent.new(@event, form) %>

    <div class="actions">
      <% if action_name == 'edit' %>
        <%= form.submit(value: 'Editar evento', class: 'button') %>
      <% else %>
        <%= form.submit(value: 'Crear evento', class: 'button') %>
      <% end %>
    </div>
  <% end %>
</div>
